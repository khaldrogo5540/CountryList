<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/countryNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mycountry"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/countryRegionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="REGION"
        app:layout_constraintStart_toEndOf="@+id/countryNameTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codeTv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="code"
        app:layout_constraintStart_toEndOf="@id/countryNameTv"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emptySpaceTv"
        tools:text="empty_space"
        app:layout_constraintTop_toBottomOf="@+id/countryNameTv"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/capital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Capital"
        app:layout_constraintTop_toBottomOf="@+id/emptySpaceTv"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/capital"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>